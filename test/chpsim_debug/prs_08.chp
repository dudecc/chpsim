//watch O_[1]
//r

requires "channel.chp";

process A()(O!:bit)
chp { <<; i : 0..15 : O!i[0] >> }
process B()(I?,O!:(e-;d[0..1]-))
prs {
  var O_[0..1]+;
  var Ov-;
  << i : 0..1 :
    I.d[i] &  O.e -> O_[i]-
   ~I.d[i] -> O_[i]+
    O_[i] -> O.d[i]-
   ~O_[i] -> O.d[i]+
  >>
  <<& i : 0..1 :  O_[i] >> -> Ov-
  <<| i : 0..1 : ~O_[i] >> -> Ov+
  Ov -> I.e-
 ~Ov -> I.e+
}
process C()(I?:bit)
chp { var x : bool; <<; i : 0..15 : I?x; assert(x=i[0]) >> }
process main()()
meta { instance a : A; instance b : B; instance c : C;
       connect a.O.wire, b.I; connect b.O, c.I.wire
}
